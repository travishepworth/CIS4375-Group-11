<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Collapsible Sidebar - Lynkstone</title>
  
  <!-- Bootstrap CSS -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-pzwT+uaZ7iK8u5GHQdW5whr0Phgzp4iOsVltlyShmPhYtWyXIIR7moVmfOW2Azr3" 
    crossorigin="anonymous" 
  />

  <style>
    html, body {
      height: 100%;
      margin: 0;
    }
  </style>
</head>

<body>
  <!-- Toggle Button to open sidebar -->
  <button
    class="btn btn-primary m-3"
    type="button"
    data-bs-toggle="offcanvas"
    data-bs-target="#sidebar"
    aria-controls="sidebar"
  >
    â˜° Menu
  </button>

  <!-- Collapsible Sidebar -->
  <div
    class="offcanvas offcanvas-start text-bg-dark"
    tabindex="-1"
    id="sidebar"
    aria-labelledby="sidebarLabel"
    style="width: 280px"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="sidebarLabel">Lynkstone</h5>
      <button
        type="button"
        class="btn-close btn-close-white"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>

    <div class="offcanvas-body d-flex flex-column p-3">
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a 
            href="/dashboard" 
            class="nav-link <%= currentRoute === 'dashboard' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#home" />
            </svg>
            Dashboard
          </a>
        </li>
        <li>
          <a 
            href="/clients" 
            class="nav-link <%= currentRoute === 'clients' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#speedometer2" />
            </svg>
            Clients
          </a>
        </li>
        <li>
          <a 
            href="/employees" 
            class="nav-link <%= currentRoute === 'employees' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#table" />
            </svg>
            Employees
          </a>
        </li>
        <li>
          <a 
            href="/suppliers" 
            class="nav-link <%= currentRoute === 'suppliers' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#grid" />
            </svg>
            Suppliers
          </a>
        </li>
        <li>
          <a 
            href="/reports" 
            class="nav-link <%= currentRoute === 'reports' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#people-circle" />
            </svg>
            Reports
          </a>
        </li>
      </ul>

      <hr />
      <div class="dropdown">
        <a
          href="#"
          id="logout-link"
          class="d-flex align-items-center text-white text-decoration-none"
        >
          <span class="material-symbols-outlined"> logout </span>
          <strong>Log Out</strong>
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
    crossorigin="anonymous"
  ></script>

  <script src="js/sidebar.js"></script>
</body>
</html>