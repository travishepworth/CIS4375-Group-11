<!doctype html>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Collapsible Sidebar - Lynkstone</title>
    
    <!-- Bootstrap CSS -->
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-pzwT+uaZ7iK8u5GHQdW5whr0Phgzp4iOsVltlyShmPhYtWyXIIR7moVmfOW2Azr3" 
      crossorigin="anonymous" 
    />
    
    <!-- Font Awesome CSS -->
    <link 
      rel="stylesheet" 
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  
    <style>
      html, body {
        height: 100%;
        margin: 0;
      }
      .btn-menu {
        width: 150px;
        height: 50px;
        border-radius: 5px;
        border: none;
        transition: all 0.5s ease-in-out;
        font-size: 20px;
        font-weight: 600;
        display: flex;
        align-items: center;
        background: #212529;
        color: #f5f5f5;
      }
      .btn-menu:hover {
        box-shadow: 0 0 20px 0px #2e2e2e3a;
      }
      .btn-menu .icon {
        position: absolute;
        height: 40px;
        width: 70px;
        display: flex;
        justify-content: center;
        align-items: center;
        transition: all 0.5s;
      }
      .btn-menu .text {
        transform: translateX(55px);
      }
      .btn-menu:hover .icon {
        width: 175px;
      }
      .btn-menu:hover .text {
        transition: all 0.5s;
        opacity: 0;
      }
      .btn-menu:focus {
        outline: none;
      }
      .btn-menu:active .icon {
        transform: scale(0.85);
      }
      .nav-link.active {
        background-color: #133d6b !important; /* Set the background color */
        color: white !important; /* Set text color for contrast */
      }
    </style>
  </head>
  

<body>
  <!-- Toggle Button to open sidebar -->
  <button
      class="btn-menu"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#sidebar"
      aria-controls="sidebar"
      data-bs-backdrop="false"
    >
      <span class="icon">
          <svg viewBox="0 0 175 80" width="40" height="40">
              <rect width="80" height="15" fill="#f0f0f0" rx="10"></rect>
              <rect y="30" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
              <rect y="60" width="80" height="15" fill="#f0f0f0" rx="10"></rect>
          </svg>
      </span>
      <span class="text">MENU</span>
    </button>

  <!-- Collapsible Sidebar -->
  <div
    class="offcanvas offcanvas-start text-bg-dark"
    tabindex="-1"
    id="sidebar"
    aria-labelledby="sidebarLabel"
    style="width: 280px"
    data-bs-backdrop="false"
  >
    <div class="offcanvas-header">
      <h3 class="offcanvas-title" id="sidebarLabel">Lynkstone</h3>
      <button
        type="button"
        class="btn-close btn-close-white"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>

    <div class="offcanvas-body d-flex flex-column p-3">
      <ul class="nav nav-pills flex-column mb-auto">
        <li class="nav-item">
          <a 
            href="/dashboard" 
            class="nav-link <%= currentRoute === 'dashboard' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#home" />
            </svg>
            <i class="fa-solid fa-table-columns me-2"></i>
            Dashboard
          </a>
        </li>
        <li>
          <a 
            href="/clients" 
            class="nav-link <%= currentRoute === 'clients' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#speedometer2" />
            </svg>
            <i class="fa-regular fa-user me-2"></i>
            Clients
          </a>
        </li>
        <li>
          <a 
            href="/employees" 
            class="nav-link <%= currentRoute === 'employees' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#table" />
            </svg>
            <i class="fa-regular fa-address-book me-2"></i>
            Employees
          </a>
        </li>
        <li>
          <a 
            href="/suppliers" 
            class="nav-link <%= currentRoute === 'suppliers' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#grid" />
            </svg>
            <i class="fa-solid fa-boxes-stacked me-2"></i>
            Suppliers
          </a>
        </li>
        <li>
          <a 
            href="/reports" 
            class="nav-link <%= currentRoute === 'reports' ? 'active' : 'text-white' %>"
          >
            <svg class="bi pe-none me-2" width="16" height="16">
              <use xlink:href="#people-circle" />
            </svg>
            <i class="fa-solid fa-chart-pie me-2"></i>
            Reports
          </a>
        </li>
      </ul>

      <hr />
      <div class="dropdown">
        <a
          href="#"
          id="logout-link"
          class="d-flex align-items-center text-white text-decoration-none"
        >
          <span class="material-symbols-outlined"> logout </span>
          <strong>Log Out</strong>
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
    crossorigin="anonymous"
  ></script>

  <script src="js/sidebar.js"></script>
</body>
</html>