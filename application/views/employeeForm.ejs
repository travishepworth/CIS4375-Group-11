<!doctype html>
<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link href="css/clientForm.css" rel="stylesheet" />

<!-- Modal -->
<body>
  <div
    class="modal fade"
    id="employeeFormModal"
    tabindex="-1"
    aria-labelledby="employeeFormModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="employeeFormModalLabel">Employee Form</h5>
          <button
            type="button"
            class="btn-close"
            id="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <form id="employeeForm">
            <div class="form-group">
              <label for="employeeType">Employee Type</label>
              <div class="input-group">
                <select
                  id="Employee_Type_ID"
                  name="Employee_Type_ID"
                  class="form-select"
                ></select>
                <input id="addEmployeeType" class="form-control me-2" />
                <button
                  type="button"
                  class="delete-button"
                  id="removeEmployeeTypeButton"
                >
                  -
                </button>
                <button
                  type="button"
                  class="add-button"
                  id="addEmployeeTypeButton"
                >
                  +
                </button>
              </div>
            </div>

            <div class="form-group">
              <label for="employeeStatus">Employee Status</label>
              <div class="input-group">
                <select
                  id="Employee_Status_ID"
                  name="Emp_Status_ID"
                  class="form-select"
                ></select>
                <input id="addEmployeeStatus" class="form-control me-2" />
                <button
                  type="button"
                  class="delete-button"
                  id="removeEmployeeStatusButton"
                >
                  -
                </button>
                <button
                  type="button"
                  class="add-button"
                  id="addEmployeeStatusButton"
                >
                  +
                </button>
              </div>
            </div>

            <div class="form-group">
              <label for="employeeFirstName">First Name</label>
              <input type="text" id="employeeFirstName" name="Emp_FName" />
            </div>

            <div class="form-group">
              <label for="employeeLname">Last Name</label>
              <input type="text" id="employeeLastName" name="Emp_LName" />
            </div>

            <div class="form-group">
              <label for="employeeEmail">Email</label>
              <input type="text" id="employeeEmail" name="Emp_Email" />
            </div>

            <div class="form-group">
              <label for="employeeFname">Cell Phone</label>
              <input type="tel" id="employeeCellPhone" name="Emp_Cell_Phone" />
            </div>

            <div class="form-group">
              <label for="employeeAddress">Address</label>
              <input type="text" id="employeeAddress" name="Emp_Address" />
            </div>

            <div class="form-group">
              <label for="employeeCity">City</label>
              <input type="text" id="employeeCity" name="Emp_City" />
            </div>

            <div class="form-group">
              <label for="employeeZipcode">Zip Code</label>
              <input type="text" id="employeeZip" name="Emp_Zip" />
            </div>

            <div class="form-group">
              <label for="employeeCountry">Country</label>
              <select
                id="Country_ID"
                name="Country_ID"
                class="form-select"
              ></select>
            </div>

            <div class="form-group">
              <label for="employeeState">State</label>
              <select
                id="State_ID"
                name="State_ID"
                class="form-select"
              ></select>
            </div>

            <div class="form-group">
              <label for="employeeDateAdded">Date Added</label>
              <input
                type="date"
                id="dateAdded"
                name="Date_Added"
                class="form-control"
              />
            </div>

            <div class="form-group">
              <label for="employeeNotes">Employee Notes</label>
              <textarea id="notes" name="notes" class="form-control"></textarea>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            id="updateButton"
            class="update-btn"
            form="employeeForm"
          >
            Update
          </button>
          <button type="button" id="deleteButton" class="delete-btn">
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</body>

<!-- Bootstrap JS and Popper.js -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
