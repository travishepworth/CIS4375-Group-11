<!doctype html>
<html lang="en">
  <head>
    <title>Job Form</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/clientForm.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="jobFormModal"
      tabindex="-1"
      aria-labelledby="JobFormModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="JobFormModalLabel">Event Form</h5>
            <button
              id="btn-close"
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!-- Form -->
            <form>
              <!-- Job Form -->
              <div id="jobForm">
                <h3>Job Form</h3>

                <div class="form-group">
                  <label for="cmjtype">Select Client</label>
                  <select
                    id="Client_ID_Job"
                    name="Client_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="cmjtype">Job Type</label>
                  <select
                    id="CMJ_Type_ID_Job"
                    name="CMJ_Type_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobstatus">Job Status</label>
                  <div class="input-group">
                    <select
                      id="MJ_Status_ID_Job"
                      name="MJ_Status_ID_Job"
                      class="form-select"
                    ></select>
                    <input id="addJobStatus" class="form-control me-2" />
                    <button
                      type="button"
                      class="delete-button"
                      id="removeJobStatusButton"
                    >
                      -
                    </button>
                    <button
                      type="button"
                      class="add-button"
                      id="addJobStatusButton"
                    >
                      +
                    </button>
                  </div>
                </div>

                <div class="form-group">
                  <label for="jobDescription">Job Description</label>
                  <div class="input-group">
                    <select
                      id="Job_Description_ID"
                      name="Job_Description_ID"
                      class="form-select"
                    >
                    </select>
                    <input id="addJobDescription" class="form-control me-2" />
                    <button
                      type="button"
                      class="delete-button"
                      id="removeJobDescriptionButton"
                    >
                      -
                    </button>
                    <button
                      type="button"
                      class="add-button"
                      id="addJobDescriptionButton"
                    >
                      +
                    </button>
                  </div>
                </div>

                <div class="form-group">
                  <label for="jobDate">Job Date</label>
                  <input
                    type="date"
                    id="Job_Date"
                    name="Job_Date"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobTime">Job Time</label>
                  <input
                    type="time"
                    id="Job_Time"
                    name="Job_Time"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobcountry">Country</label>
                  <select
                    id="Country_ID_Job"
                    name="Country_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobState">State</label>
                  <select
                    id="State_ID_Job"
                    name="State_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobAddress">Job Address</label>
                  <input
                    type="text"
                    id="Job_Address"
                    name="Job_Address"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCity">Job City</label>
                  <input
                    type="text"
                    id="Job_City"
                    name="Job_City"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobZip">Job Zip</label>
                  <input
                    type="text"
                    id="Job_Zip"
                    name="Job_Zip"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobprevDeposit">Previous Deposit</label>
                  <input
                    type="number"
                    id="Prev_Deposit"
                    name="Prev_Deposit"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobcharge">Charge</label>
                  <input
                    type="number"
                    id="Charge"
                    name="Charge"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCost">Job Cost</label>
                  <input
                    type="number"
                    id="Job_Cost"
                    name="Job_Cost"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCostNotes">Job Cost Notes</label>
                  <textarea
                    id="Job_Cost_Notes"
                    name="Job_Cost_Notes"
                    class="form-control"
                  ></textarea>
                </div>

                <div class="form-group">
                  <label for="jobProfit">Job Profit</label>
                  <input
                    type="number"
                    id="Job_Profit"
                    name="Job_Profit"
                    class="form-control"
                    readonly
                  />
                </div>

                <div class="form-group">
                  <label for="jobNotes">Job Notes</label>
                  <textarea
                    id="Job_Notes"
                    name="Job_Notes"
                    class="form-control"
                  ></textarea>
                </div>
              </div>
            </form>
          </div>

          <div class="modal-footer">
            <button type="button" id="updateButton" class="update-btn">
              Update
            </button>
            <button type="button" id="deleteButton" class="delete-btn">
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
