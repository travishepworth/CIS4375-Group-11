<!doctype html>
<html lang="en">
  <head>
    <title>Job Form</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/clientForm.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="formModal"
      tabindex="-1"
      aria-labelledby="JobFormModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="JobFormModalLabel">Event Form</h5>
            <button
              id="btn-close"
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!-- Form -->
            <form>
              <div class="form-group">
                <label for="jobMeeting">Job or Meeting</label>
                <select id="jobMeeting" name="jobMeeting" class="form-select">
                  <option value="job">Job</option>
                  <option value="meeting">Meeting</option>
                </select>
              </div>

              <!-- Job Form -->
              <div id="jobForm" style="display: none; margin-top: 20px">
                <h3>Job Form</h3>

                <div class="form-group">
                  <label for="cmjtype">Select Client</label>
                  <select
                    id="Client_ID_Job"
                    name="Client_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="cmjtype">Job Type</label>
                  <select
                    id="CMJ_Type_ID_Job"
                    name="CMJ_Type_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobstatus">Job Status</label>
                  <select
                    id="MJ_Status_ID_Job"
                    name="MJ_Status_ID_Job"
                    class="form-select"
                  ></select>
                </div>
                <button type="button" class="add-button" id="Job_Status_Button">
                  +
                </button>

                <div class="form-group">
                  <label for="jobDescription">Job Description</label>
                  <select
                    id="Job_Description_ID"
                    name="Job_Description_ID"
                    class="form-select"
                  >
                    <option value="" selected></option>
                  </select>
                </div>
                <button
                  type="button"
                  class="add-button"
                  id="Job_Description_Button"
                >
                  +
                </button>

                <div class="form-group">
                  <label for="jobDate">Job Date</label>
                  <input
                    type="date"
                    id="Job_Date"
                    name="Job_Date"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobTime">Job Time</label>
                  <input
                    type="time"
                    id="Job_Time"
                    name="Job_Time"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobcountry">Country</label>
                  <select
                    id="Country_ID_Job"
                    name="Country_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobState">State</label>
                  <select
                    id="State_ID_Job"
                    name="State_ID_Job"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="jobAddress">Job Address</label>
                  <input
                    type="text"
                    id="Job_Address"
                    name="Job_Address"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCity">Job City</label>
                  <input
                    type="text"
                    id="Job_City"
                    name="Job_City"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobZip">Job Zip</label>
                  <input
                    type="text"
                    id="Job_Zip"
                    name="Job_Zip"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobprevDeposit">Previous Deposit</label>
                  <input
                    type="number"
                    id="Prev_Deposit"
                    name="Prev_Deposit"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobcharge">Charge</label>
                  <input
                    type="number"
                    id="Charge"
                    name="Charge"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCost">Job Cost</label>
                  <input
                    type="number"
                    id="Job_Cost"
                    name="Job_Cost"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCostNotes">Job Cost Notes</label>
                  <textarea
                    id="Job_Cost_Notes"
                    name="Job_Cost_Notes"
                    class="form-control"
                  ></textarea>
                </div>

                <div class="form-group">
                  <label for="jobProfit">Job Profit</label>
                  <input
                    type="number"
                    id="Job_Profit"
                    name="Job_Profit"
                    class="form-control"
                    readonly
                  />
                </div>

                <div class="form-group">
                  <label for="jobNotes">Job Notes</label>
                  <textarea
                    id="Job_Notes"
                    name="Job_Notes"
                    class="form-control"
                  ></textarea>
                </div>
              </div>

              <!-- Meeting Form -->
              <div id="meetingForm" style="display: none; margin-top: 20px">
                <h3>Meeting Form</h3>

                <div class="form-group">
                  <label for="cmjtype">Select Client</label>
                  <select
                    id="Client_ID_Meeting"
                    name="Client_ID_Meeting"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="meetingcmjType">Meeting Type</label>
                  <select
                    id="CMJ_Type_ID_Meeting"
                    name="CMJ_Type_ID_Meeting"
                    class="form-select"
                  ></select>
                </div>
                <div class="form-group">
                  <label for="meetingstatus">Meeting Status</label>
                  <select
                    id="MJ_Status_ID_Meeting"
                    name="MJ_Status_ID_Meeting"
                    class="form-select"
                  ></select>
                </div>
                <button
                  type="button"
                  class="add-button"
                  id="Meeting_Status_Button"
                >
                  +
                </button>
                <div class="form-group">
                  <label for="meetingdate">Meeting Date</label>
                  <input
                    type="date"
                    id="Meet_Date"
                    name="Meet_Date"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingtime">Meeting Time</label>
                  <input
                    type="time"
                    id="Meet_Time"
                    name="Meet_Time"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingcountry">Country</label>
                  <select
                    id="Country_ID_Meeting"
                    name="Country_ID_Meeting"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="meetingState">State</label>
                  <select
                    id="State_ID_Meeting"
                    name="State_ID_Meeting"
                    class="form-select"
                  ></select>
                </div>

                <div class="form-group">
                  <label for="meetingAddress">Meeting Address</label>
                  <input
                    type="text"
                    id="Meet_Address"
                    name="Meet_Address"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingCity">Meeting City</label>
                  <input
                    type="text"
                    id="Meet_City"
                    name="Meet_City"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingZip"> Meeting Zip</label>
                  <input
                    type="text"
                    id="Meet_Zip"
                    name="Meet_Zip"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingDeposit">Deposit Collected?</label>
                  <input
                    type="number"
                    id="Deposit_Collect"
                    name="Deposit_Collect"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingQuote">Quote</label>
                  <input
                    type="number"
                    id="Quote"
                    name="Quote"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="jobCost">Estimated Cost</label>
                  <input
                    type="number"
                    id="Est_Cost"
                    name="Est_Cost"
                    class="form-control"
                  />
                </div>

                <div class="form-group">
                  <label for="meetingCostNotes">Estimated Cost Notes</label>
                  <textarea
                    id="Est_Cost_Notes"
                    name="Est_Cost_Notes"
                    class="form-control"
                  ></textarea>
                </div>

                <div class="form-group">
                  <label for="meetingProfit">Estimated Profit</label>
                  <input
                    type="number"
                    id="Est_Profit"
                    name="Est_Profit"
                    class="form-control"
                    readonly
                  />
                </div>

                <div class="form-group">
                  <label for="meetingNotes">Meeting Notes</label>
                  <textarea
                    id="Meeting_Notes"
                    name="Meeting_Notes"
                    class="form-control"
                  ></textarea>
                </div>
              </div>
            </form>
          </div>

          <div class="modal-footer">
            <button type="button" id="updateButton" class="update-btn">
              Update
            </button>
            <button type="button" id="deleteButton" class="delete-btn">
              Delete
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const jobMeetingSelect = document.getElementById("jobMeeting");
        const jobForm = document.getElementById("jobForm");
        const meetingForm = document.getElementById("meetingForm");

        jobMeetingSelect.addEventListener("change", (e) => {
          const value = e.target.value;
          jobForm.style.display = value === "job" ? "block" : "none";
          meetingForm.style.display = value === "meeting" ? "block" : "none";
        });
      });
    </script>
  </body>
</html>
