<!doctype html>
<title>Job Form</title>
<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
  rel="stylesheet"
/>
<link href="css/clientForm.css" rel="stylesheet" />
<body>
  <!-- Modal -->
  <div
    class="modal fade"
    id="JobFormModal"
    tabindex="-1"
    aria-labelledby="JobFormModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="JobFormModalLabel">Event Form</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <!-- form goes here -->
           <form>
            <div class="form-group">
              <label for="jobMeeting">Job or Meeting</label>
              <select id="jobMeeting" name="jobMeeting" class="form-select">
                <option value="" selected>Select an option</option>
                <option value="job">Job</option>
                <option value="meeting">Meeting</option>
              </select>
            </div>
            <!-- Job Form -->
            <div id="jobForm" style="display: none; margin-top: 20px;">
              <h3>Job Form</h3>

              <div class="form-group">
                <label for="jobType">Job Type</label>
                <select id="cmjtype" name="cmjtype" class="form-select">
                </select>
              </div>

              <div class="form-group">
                <label for="jobstatus">Job Status</label>
                <select id="jobstatus" name="jobstatus" class="form-control" ></select>
              </div>

              <div class="form-group">
                <label for="jobDescription">Job Description</label>
                <select id="jobDescription" name="jobDescription" class="form-control" ></select>
              </div>

              <div class="form-group">
                <label for="jobDate">Job Date</label>
                <input type="date" id="jobDate" name="jobDate" class="form-control"/>
              </div>

              <div class="form-group">
                <label for="jobTime">Job Time</label>
                <input type="time" id="jobTime" name="jobTime" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobcountry">Country</label>
                <select id="jobcountry" name="jobcountry" class="form-control"></select>
              </div>

              <div class="form-group">
                <label for="jobState">State</label>
                <select id="jobState" name="jobState" class="form-control"></select>
              </div>

              <div class="form-group">
                <label for="jobAddress">Job Address</label>
                <input type="text" id="jobAddress" name="jobAddress" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobCity">Job City</label>
                <input type="text" id="jobCity" name="jobCity" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobZip">Job Zip</label>
                <input type="text" id="jobZip" name="jobZip" class="form-control" />
              </div>
              
              <div class="form-group">
                <label for="jobprevDeposit">Previous Deposit</label>
                <input type="number" id="jobprevDeposit" name="jobprevDeposit" class="form-control" />
              </div>
              
              <div class="form-group">
                <label for="jobcharge">Charge</label>
                <input type="number" id="jobcharge" name="jobcharge" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobCost">Job Cost</label>
                <input type="number" id="jobCost" name="jobCost" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobCostNotes">Job Cost Notes</label>
                <textarea id="jobCostNotes" name="jobCostNotes" class="form-control"></textarea>
              </div>

              <div class="form-group">
                <label for="jobProfit">Job Profit</label>
                <input type="number" id="jobProfit" name="jobProfit" class="form-control" readonly/>
              </div>

              <div class="form-group">
                <label for="jobNotes">Job Notes</label>
                <textarea id="jobNotes" name="jobNotes" class="form-control"></textarea>
              </div>
            </div>

            



            <!--Meeting Form-->
            <div id="meetingForm" style="display: none; margin-top: 20px;">
              <h3>Meeting Form</h3>
              <div class="form-group">
                <label for="meetingcmjType">Meeting Type</label>
                <select id="meetingcmjType" name="meetingcmjType" class="form-select"></select>
              </div>

              <div class="form-group">
                <label for="meetingstatus">Meeting Status</label>
                <select id="meetingstatus" name="meetingstatus" class="form-control"></select>
              </div>

              <div class="form-group">
                <label for="meetingdate">Meeting Date</label>
                <input type="date" id="meetingdate" name="meetingdate" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingtime">Meeting Time</label>
                <input type="time" id="meetingtime" name="meetingtime" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingcountry">Country</label>
                <select id="meetingcountry" name="meetingcountry" class="form-control"></select>
              </div>

              <div class="form-group">
                <label for="meetingState">State</label>
                <select id="meetingState" name="meetingState" class="form-control"></select>
              </div>

              <div class="form-group">
                <label for="meetingAddress">Meeting Address</label>
                <input type="text" id="meetingAddress" name="meetingAddress" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingCity">Meeting City</label>
                <input type="text" id="meetingCity" name="meetingCity" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingZip">Job Zip</label>
                <input type="text" id="meetingZip" name="meetingZip" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingZip">Job Zip</label>
                <input type="text" id="meetingZip" name="meetingZip" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingDeposit">Deposit Collected</label>
                <input type="number" id="meetingDeposit" name="meetingDeposit" class="form-control" />
              </div>
              
              <div class="form-group">
                <label for="meetingQuote">Quote</label>
                <input type="number" id="meetingQuote" name="meetingQuote" class="form-control" />
              </div>

              <div class="form-group">
                <label for="jobCost">Job Cost</label>
                <input type="number" id="jobCost" name="jobCost" class="form-control" />
              </div>

              <div class="form-group">
                <label for="meetingCostNotes">Meeting Cost Notes</label>
                <textarea id="meetingCostNotes" name="meetingCostNotes" class="form-control"></textarea>
              </div>

              <div class="form-group">
                <label for="meetingProfit">Estimated Profit</label>
                <input type="number" id="meetingProfit" name="meetingProfit" class="form-control" readonly/>
              </div>

              <div class="form-group">
                <label for="meetingNotes">Meeting Notes</label>
                <textarea id="meetingNotes" name="meetingNotes" class="form-control"></textarea>
              </div>
            </div>
            
            </div>
           </form>
        
          <div class="modal-footer">
            <button
              type="button"
              id="updateButton"
              class="update-btn"
              form="jobForm"
            >
              Update
            </button>
            <button type="button" id="deleteButton" class="delete-btn">
              Delete
            </button>
          </div>
      </div>
      </div>
    </div>

    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>

    <!-- JavaScript to trigger modal on page load and handle delete confirmation -->
    <script type="module" src="js/jobForm.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </div>
</body>
