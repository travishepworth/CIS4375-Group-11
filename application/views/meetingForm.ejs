<!doctype html>
<html lang="en">
  <head>
    <title>Meeting Form</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="css/clientForm.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Modal -->
    <div
      class="modal fade"
      id="meetingFormModal"
      tabindex="-1"
      aria-labelledby="JobFormModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="JobFormModalLabel">Event Form</h5>
            <button
              id="btn-close"
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <!-- Form -->
            <form>
              <!-- Meeting Form -->
              <div id="meetingForm">
                <h3>Meeting Form</h3>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="Client_ID_Meeting" class="form-label">Select Client</label>
                    <select id="Client_ID_Meeting" name="Client_ID_Meeting" class="form-select"></select>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="CMJ_Type_ID_Meeting" class="form-label">Meeting Type</label>
                    <select id="CMJ_Type_ID_Meeting" name="CMJ_Type_ID_Meeting" class="form-select"></select>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="MJ_Status_ID_Meeting" class="form-label">Meeting Status</label>
                  <div class="input-group">
                    <select id="MJ_Status_ID_Meeting" name="MJ_Status_ID_Meeting" class="form-select"></select>
                    <input id="addMeetingStatus" class="form-control" placeholder="Add new status" />
                    <button type="button" class="btn btn-outline-danger" id="removeMeetingStatusButton">-</button>
                    <button type="button" class="btn btn-outline-primary" id="addMeetingStatusButton">+</button>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="Meeting_Date" class="form-label">Meeting Date</label>
                    <input type="date" id="Meeting_Date" name="Meeting_Date" class="form-control" />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="Meeting_Time" class="form-label">Meeting Time</label>
                    <input type="time" id="Meeting_Time" name="Meeting_Time" class="form-control" />
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="Country_ID_Meeting" class="form-label">Country</label>
                    <select id="Country_ID_Meeting" name="Country_ID_Meeting" class="form-select"></select>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="State_ID_Meeting" class="form-label">State</label>
                    <select id="State_ID_Meeting" name="State_ID_Meeting" class="form-select"></select>
                  </div>
                </div>

                <div class="mb-3">
                  <label for="Meeting_Address" class="form-label">Meeting Address</label>
                  <input type="text" id="Meeting_Address" name="Meeting_Address" class="form-control" />
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="Meeting_City" class="form-label">Meeting City</label>
                    <input type="text" id="Meeting_City" name="Meeting_City" class="form-control" />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="Meeting_Zip" class="form-label">Meeting Zip</label>
                    <input type="text" id="Meeting_Zip" name="Meeting_Zip" class="form-control" />
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label for="Deposit_Collect" class="form-label">Deposit Collected?</label>
                    <input type="number" id="Deposit_Collect" name="Deposit_Collect" class="form-control" />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label for="Quote" class="form-label">Quote</label>
                    <input type="number" id="Quote" name="Quote" class="form-control" />
                  </div>
                </div>

                <div class="mb-3">
                  <label for="Est_Cost" class="form-label">Estimated Cost</label>
                  <input type="number" id="Est_Cost" name="Est_Cost" class="form-control" />
                </div>

                <div class="mb-3">
                  <label for="Est_Cost_Notes" class="form-label">Estimated Cost Notes</label>
                  <textarea id="Est_Cost_Notes" name="Est_Cost_Notes" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                  <label for="Est_Profit" class="form-label">Estimated Profit</label>
                  <input type="number" id="Est_Profit" name="Est_Profit" class="form-control" readonly />
                </div>

                <div class="mb-3">
                  <label for="Meeting_Notes" class="form-label">Meeting Notes</label>
                  <textarea id="Meeting_Notes" name="Meeting_Notes" class="form-control" rows="3"></textarea>
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" id="updateButton" class="update-btn">Update</button>
            <button type="button" id="deleteButton" class="delete-btn">Delete</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
